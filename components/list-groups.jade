//- list-group mixins
mixin list-group(items)
	ul.list-group&attributes(attributes)
	each item, index in items
		li.list-group-item #{item}

mixin list-group-links(items,active)
	.list-group&attributes(attributes)
	each item, index in items
		if(index === active)
			a.list-group-item.active(href="#{item.url}") #{item.text}
		else
			a.list-group-item(href="#{item.url}") #{item.text}

mixin list-group-item(url,active)
	if(active === "true")
		a.list-group-item.active(href="#{url}")&attributes(attributes)
			block
	else
		a.list-group-item(href="#{url}")&attributes(attributes)
			block

mixin list-group-custom()
	.list-group&attributes(attributes)
		block